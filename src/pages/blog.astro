---
import MainLayout from '../layouts/MainLayout.astro';
import BlogCard from '../components/molecules/BlogCard.astro';
import BlogFilters from '../components/molecules/BlogFilters.astro';
import Button from '../components/atoms/Button.astro';
import { WC_API_URL } from '../lib/config';

// Get search parameters
const url = new URL(Astro.request.url);
const selectedCategory = url.searchParams.get('category') || 'all';
const searchQuery = url.searchParams.get('search') || '';
const currentPage = parseInt(url.searchParams.get('page') || '1');
const perPage = 12;

// Get categories
let categories: any[] = [];
try {
  const categoriesResponse = await fetch(`${WC_API_URL}/wp-json/wp/v2/categories?per_page=100&hide_empty=true`);
  if (categoriesResponse.ok) {
    categories = await categoriesResponse.json();
  }
} catch (error) {
  console.error('[Blog] Error fetching categories:', error);
}

// Get posts
let posts: any[] = [];
let totalPosts = 0;
let totalPages = 1;

try {
  const params = new URLSearchParams({
    page: currentPage.toString(),
    per_page: perPage.toString(),
    _embed: 'true',
  });
  
  if (selectedCategory !== 'all') {
    // Find selected category ID
    const category = categories.find(cat => cat.slug === selectedCategory);
    if (category) {
      params.append('categories', category.id.toString());
    }
  }
  
  if (searchQuery) {
    params.append('search', searchQuery);
  }
  
  const postsResponse = await fetch(`${WC_API_URL}/wp-json/wp/v2/posts?${params.toString()}`);
  
  if (postsResponse.ok) {
    posts = await postsResponse.json();
    totalPosts = parseInt(postsResponse.headers.get('X-WP-Total') || '0');
    totalPages = parseInt(postsResponse.headers.get('X-WP-TotalPages') || '1');
  }
} catch (error) {
  console.error('[Blog] Error fetching posts:', error);
}

// Calculate pages to display in pagination
const getPageNumbers = () => {
  const pages: (number | string)[] = [];
  const maxVisible = 7;
  
  if (totalPages <= maxVisible) {
    for (let i = 1; i <= totalPages; i++) {
      pages.push(i);
    }
  } else {
    if (currentPage <= 4) {
      for (let i = 1; i <= 5; i++) {
        pages.push(i);
      }
      pages.push('...');
      pages.push(totalPages);
    } else if (currentPage >= totalPages - 3) {
      pages.push(1);
      pages.push('...');
      for (let i = totalPages - 4; i <= totalPages; i++) {
        pages.push(i);
      }
    } else {
      pages.push(1);
      pages.push('...');
      for (let i = currentPage - 1; i <= currentPage + 1; i++) {
        pages.push(i);
      }
      pages.push('...');
      pages.push(totalPages);
    }
  }
  
  return pages;
};

const pageNumbers = getPageNumbers();

// Function to create pagination URL
const createPageUrl = (page: number) => {
  const url = new URL(Astro.request.url);
  if (page > 1) {
    url.searchParams.set('page', page.toString());
  } else {
    url.searchParams.delete('page');
  }
  return url.pathname + url.search;
};
---

<MainLayout 
  title="Blog | Aviaco Shop" 
  description="Discover the latest news, tips and updates from Aviaco Shop. Articles about aviation, helicopters and spare parts."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary via-primary-dark to-primary-light text-white py-16 md:py-24 overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Icon -->
        <div class="mb-6 inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-white/10 backdrop-blur-sm">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        
        <h1 class="font-outfit font-bold text-4xl md:text-5xl lg:text-6xl mb-6 leading-tight">
          Blog <span class="text-white/80">Aviaco</span>
        </h1>
        <p class="font-outfit text-lg md:text-xl text-white/90 max-w-2xl mx-auto leading-relaxed">
          Discover our news, expert advice and the latest updates from the aviation world
        </p>
      </div>
    </div>
    
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-white/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
  </section>
  
  <!-- Filters -->
  <BlogFilters 
    categories={categories} 
    selectedCategory={selectedCategory}
    searchQuery={searchQuery}
  />
  
  <!-- Content -->
  <section class="py-12 md:py-16 bg-gray-50 dark:bg-gray-900 min-h-[60vh]">
    <div class="container mx-auto px-4">
      <!-- Search results -->
      {searchQuery && (
        <div class="mb-8 text-center">
          <p class="font-outfit text-gray-600 dark:text-gray-400">
            Results for <strong class="text-primary">"{searchQuery}"</strong>
            {totalPosts > 0 && (
              <span> - {totalPosts} article{totalPosts > 1 ? 's' : ''} found</span>
            )}
          </p>
        </div>
      )}
      
      <!-- Articles grid -->
      <div id="blog-posts-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {posts.length > 0 ? (
          posts.map((post) => (
            <BlogCard post={post} />
          ))
        ) : (
          <div class="col-span-full text-center py-16">
            <div class="text-gray-400 dark:text-gray-600 mb-6">
              <svg class="w-20 h-20 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-outfit font-semibold text-xl md:text-2xl text-gray-900 dark:text-white mb-3">
              No articles found
            </h3>
            <p class="font-outfit text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
              {searchQuery 
                ? "Try modifying your search or select another category" 
                : "No articles are available at the moment"}
            </p>
            {searchQuery && (
              <Button 
                href="/blog" 
                variant="primary"
                class="inline-flex items-center gap-2"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
                View all articles
              </Button>
            )}
          </div>
        )}
      </div>
      
      <!-- Pagination -->
      {totalPages > 1 && posts.length > 0 && (
        <div id="pagination-container" class="mt-12 flex items-center justify-center gap-2">
          <!-- Previous button -->
          {currentPage > 1 ? (
            <a
              href={createPageUrl(currentPage - 1)}
              class="inline-flex items-center justify-center w-10 h-10 rounded-lg border-2 border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:border-primary hover:text-primary transition-all duration-300"
              aria-label="Previous page"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </a>
          ) : (
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg border-2 border-gray-200 dark:border-gray-700 text-gray-300 dark:text-gray-600 cursor-not-allowed" aria-label="Previous page (disabled)">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </span>
          )}
          
          <!-- Page numbers -->
          {pageNumbers.map((pageNum) => (
            pageNum === '...' ? (
              <span class="inline-flex items-center justify-center w-10 h-10 text-gray-400 dark:text-gray-600 font-outfit">
                ...
              </span>
            ) : (
              <a
                href={createPageUrl(pageNum as number)}
                class={`inline-flex items-center justify-center w-10 h-10 rounded-lg font-outfit font-medium transition-all duration-300 ${
                  currentPage === pageNum
                    ? 'bg-primary text-white shadow-lg shadow-primary/30'
                    : 'border-2 border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:border-primary hover:text-primary'
                }`}
                aria-label={`Go to page ${pageNum}`}
                aria-current={currentPage === pageNum ? 'page' : undefined}
              >
                {pageNum}
              </a>
            )
          ))}
          
          <!-- Next button -->
          {currentPage < totalPages ? (
            <a
              href={createPageUrl(currentPage + 1)}
              class="inline-flex items-center justify-center w-10 h-10 rounded-lg border-2 border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:border-primary hover:text-primary transition-all duration-300"
              aria-label="Next page"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          ) : (
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-lg border-2 border-gray-200 dark:border-gray-700 text-gray-300 dark:text-gray-600 cursor-not-allowed" aria-label="Next page (disabled)">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          )}
        </div>
      )}
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 md:py-20 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="mb-6 inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary/10 dark:bg-primary/20">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h2 class="font-outfit font-bold text-3xl md:text-4xl text-gray-900 dark:text-white mb-4">
          Stay informed
        </h2>
        <p class="font-outfit text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Don't miss any news! Follow us on social media to be notified of our new articles.
        </p>
        <div class="flex items-center justify-center gap-4">
          <a 
            href="https://fr.linkedin.com/company/aviacofrance" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-outfit font-medium transition-all duration-300 shadow-lg shadow-blue-600/30 hover:shadow-xl hover:shadow-blue-600/40"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a 
            href="https://www.facebook.com/AviacoFr/?locale=fr_FR" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border-2 border-gray-200 dark:border-gray-700 hover:border-primary text-gray-700 dark:text-gray-300 hover:text-primary font-outfit font-medium transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

