---
export const prerender = false;

import MainLayout from '../../layouts/MainLayout.astro';
import Button from '../../components/atoms/Button.astro';
import Card from '../../components/atoms/Card.astro';

const { id } = Astro.params;
---

<MainLayout title="Order Confirmed" description="Your order has been confirmed">
  <div class="container mx-auto px-4 py-8">
    <Card variant="elevated" class="max-w-2xl mx-auto p-8 text-center">
      <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      
      <h1 class="font-outfit font-bold text-3xl mb-4 text-gray-900 dark:text-white">
        Order Confirmed!
      </h1>
      
      <p class="font-outfit text-gray-600 dark:text-gray-400 mb-2">
        Your order #{id} has been successfully recorded.
      </p>
      
      <p class="font-outfit text-gray-600 dark:text-gray-400 mb-6">
        You will receive a confirmation email shortly with your order details.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/catalogue" variant="primary">
          Continue Shopping
        </Button>
        <Button href="/" variant="outline">
          Back to Home
        </Button>
      </div>
    </Card>
  </div>
</MainLayout>

