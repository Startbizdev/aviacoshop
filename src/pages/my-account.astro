---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/atoms/Button.astro';
import Card from '../components/atoms/Card.astro';
import Input from '../components/atoms/Input.astro';
import Spinner from '../components/atoms/Spinner.astro';
import { User, Package, Settings, LogOut, Calendar, MapPin, Phone, Mail, Edit2, Save, X, CheckCircle2, AlertCircle, ShoppingBag, Inbox, AlertTriangle, RefreshCw } from 'lucide-astro';

---

<MainLayout title="My Account" description="Manage your account and view your orders">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-10">
    <div id="login-required" class="hidden flex items-center justify-center min-h-[70vh] py-12 px-4">
      <Card variant="elevated" class="max-w-md mx-auto p-8 sm:p-10 w-full shadow-xl">
        <div class="flex flex-col items-center text-center">
          <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-full bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 flex items-center justify-center mb-6 shadow-inner">
            <User class="w-10 h-10 sm:w-12 sm:h-12 text-primary" />
          </div>
          <h2 class="font-outfit font-bold text-2xl sm:text-3xl mb-3 text-gray-900 dark:text-white">
            Please sign in
          </h2>
          <p class="font-outfit text-base text-gray-600 dark:text-gray-400 mb-8 leading-relaxed max-w-sm">
            You need to be signed in to access your account and manage your orders.
          </p>
          <Button href="/login" variant="primary" size="lg" class="w-full shadow-lg hover:shadow-xl transition-shadow duration-300">
            Sign in
          </Button>
        </div>
      </Card>
    </div>

    <div id="account-content" class="hidden">
      <!-- Header -->
      <div class="mb-6 sm:mb-8 lg:mb-10">
        <h1 class="font-outfit font-bold text-2xl sm:text-3xl lg:text-4xl mb-2 sm:mb-3 text-gray-900 dark:text-white tracking-tight">
          My Account
        </h1>
        <p class="font-outfit text-sm sm:text-base text-gray-600 dark:text-gray-400">
          Manage your account information and view your orders
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <Card variant="elevated" class="p-5 sm:p-6 sticky top-6 lg:top-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center gap-3 sm:gap-4 mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
              <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-full flex items-center justify-center flex-shrink-0 shadow-inner ring-2 ring-primary/5">
                <User class="w-7 h-7 sm:w-8 sm:h-8 text-primary" />
              </div>
              <div class="min-w-0 flex-1">
                <h2 id="user-name" class="font-outfit font-semibold text-base sm:text-lg text-gray-900 dark:text-white truncate mb-0.5">
                  <span id="user-name-loading" class="inline-flex items-center gap-2 text-gray-500 dark:text-gray-400">
                    <Spinner size="sm" />
                    <span class="text-sm">Loading...</span>
                  </span>
                </h2>
                <p id="user-email" class="font-outfit text-xs sm:text-sm text-gray-600 dark:text-gray-400 truncate">
                  <span id="user-email-loading" class="text-gray-400 dark:text-gray-500">Loading...</span>
                </p>
              </div>
            </div>
            
            <nav class="space-y-1.5 sm:space-y-2">
              <button
                id="nav-orders"
                class="w-full flex items-center gap-3 px-4 py-2.5 sm:py-3 rounded-lg bg-primary/10 dark:bg-primary/20 text-primary font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:bg-primary/15 dark:hover:bg-primary/25 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-primary/20"
              >
                <Package class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span>Orders</span>
              </button>
              <button
                id="nav-profile"
                class="w-full flex items-center gap-3 px-4 py-2.5 sm:py-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-300 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600"
              >
                <Settings class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span>Profile</span>
              </button>
              <button
                id="nav-addresses"
                class="w-full flex items-center gap-3 px-4 py-2.5 sm:py-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-300 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600"
              >
                <MapPin class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span>Addresses</span>
              </button>
            </nav>
            
            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
              <button
                id="logout-btn"
                class="w-full flex items-center gap-3 px-4 py-2.5 sm:py-3 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-red-600 dark:text-red-400 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-red-300 dark:focus:ring-red-800"
              >
                <LogOut class="w-4 h-4 sm:w-5 sm:h-5 flex-shrink-0" />
                <span>Log out</span>
              </button>
            </div>
          </Card>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Orders Section -->
          <div id="orders-section" data-section="orders" class="animate-in fade-in slide-in-from-right duration-300">
            <Card variant="elevated" class="p-5 sm:p-6 lg:p-8 shadow-lg">
              <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="font-outfit font-bold text-xl sm:text-2xl text-gray-900 dark:text-white">
                  My Orders
                </h2>
              </div>
              
              <div id="orders-list" class="space-y-3 sm:space-y-4 min-h-[300px]">
                <div class="flex flex-col items-center justify-center py-16 sm:py-20">
                  <div class="w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 flex items-center justify-center mb-4 shadow-inner ring-2 ring-primary/5">
                    <Spinner size="lg" />
                  </div>
                  <p class="font-outfit text-sm sm:text-base text-gray-600 dark:text-gray-400">Loading orders...</p>
                </div>
              </div>
              
              <div id="orders-pagination" class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700 flex flex-wrap justify-center gap-2 sm:gap-3 hidden"></div>
            </Card>
          </div>

          <!-- Addresses Section -->
          <div id="addresses-section" data-section="addresses" class="hidden space-y-5 sm:space-y-6 animate-in fade-in slide-in-from-right duration-300">
            <!-- Loading state for addresses -->
            <div id="addresses-loading" class="hidden">
              <Card variant="elevated" class="p-6 shadow-lg">
                <div class="flex flex-col items-center justify-center py-16 sm:py-20">
                  <div class="w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 flex items-center justify-center mb-4 shadow-inner ring-2 ring-primary/5">
                    <Spinner size="lg" />
                  </div>
                  <p class="font-outfit text-sm sm:text-base text-gray-600 dark:text-gray-400">Loading addresses...</p>
                </div>
              </Card>
            </div>
            
            <!-- Billing Address Card -->
            <Card variant="elevated" class="p-5 sm:p-6 lg:p-8 shadow-lg hover:shadow-xl transition-shadow duration-300" id="billing-card">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="font-outfit font-bold text-xl sm:text-2xl text-gray-900 dark:text-white">
                  Billing Address
                </h2>
                <button
                  id="edit-billing-btn"
                  class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600"
                >
                  <Edit2 class="w-4 h-4" />
                  <span>Edit</span>
                </button>
              </div>
              
              <!-- Success/Error Messages -->
              <div id="billing-message" class="hidden mb-4 p-4 rounded-lg"></div>
              
              <form id="billing-form" class="space-y-4 sm:space-y-5">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      First Name
                    </label>
                    <Input
                      type="text"
                      id="billing-first-name"
                      name="billing_first_name"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Last Name
                    </label>
                    <Input
                      type="text"
                      id="billing-last-name"
                      name="billing_last_name"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                </div>
                
                <div class="space-y-2">
                  <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                    Company
                  </label>
                  <Input
                    type="text"
                    id="billing-company"
                    name="billing_company"
                    class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                    disabled
                  />
                </div>
                
                <div class="space-y-2">
                  <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                    Address Line 1
                  </label>
                  <Input
                    type="text"
                    id="billing-address-1"
                    name="billing_address_1"
                    class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                    disabled
                  />
                </div>
                
                <div class="space-y-2">
                  <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                    Address Line 2
                  </label>
                  <Input
                    type="text"
                    id="billing-address-2"
                    name="billing_address_2"
                    class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                    disabled
                  />
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-5">
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      City
                    </label>
                    <Input
                      type="text"
                      id="billing-city"
                      name="billing_city"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Postcode
                    </label>
                    <Input
                      type="text"
                      id="billing-postcode"
                      name="billing_postcode"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Country
                    </label>
                    <Input
                      type="text"
                      id="billing-country"
                      name="billing_country"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Email
                    </label>
                    <Input
                      type="email"
                      id="billing-email"
                      name="billing_email"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Phone
                    </label>
                    <Input
                      type="tel"
                      id="billing-phone"
                      name="billing_phone"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                </div>
                
                <div class="flex flex-col sm:flex-row gap-3 pt-4 sm:pt-6 border-t border-gray-200 dark:border-gray-700 hidden" id="billing-form-actions">
                  <Button type="submit" variant="primary" size="md" id="save-billing-btn" class="flex items-center justify-center shadow-md hover:shadow-lg transition-shadow duration-300">
                    <Save class="w-4 h-4 mr-2" />
                    <span id="save-billing-text">Save Changes</span>
                    <span id="save-billing-spinner" class="hidden ml-2">
                      <Spinner size="sm" />
                    </span>
                  </Button>
                  <Button
                    type="button"
                    id="cancel-billing-btn"
                    variant="outline"
                    size="md"
                    class="flex items-center justify-center hover:shadow-md transition-shadow duration-300"
                  >
                    <X class="w-4 h-4 mr-2" />
                    Cancel
                  </Button>
                </div>
              </form>
            </Card>
            
            <!-- Shipping Address Card -->
            <Card variant="elevated" class="p-5 sm:p-6 lg:p-8 shadow-lg hover:shadow-xl transition-shadow duration-300" id="shipping-card">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="font-outfit font-bold text-xl sm:text-2xl text-gray-900 dark:text-white">
                  Shipping Address
                </h2>
                <button
                  id="edit-shipping-btn"
                  class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600"
                >
                  <Edit2 class="w-4 h-4" />
                  <span>Edit</span>
                </button>
              </div>
              
              <!-- Success/Error Messages -->
              <div id="shipping-message" class="hidden mb-4 p-4 rounded-lg"></div>
              
              <form id="shipping-form" class="space-y-4 sm:space-y-5">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                      First Name
                    </label>
                    <Input
                      type="text"
                      id="shipping-first-name"
                      name="shipping_first_name"
                      class="w-full"
                      disabled
                    />
                  </div>
                  <div>
                    <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                      Last Name
                    </label>
                    <Input
                      type="text"
                      id="shipping-last-name"
                      name="shipping_last_name"
                      class="w-full"
                      disabled
                    />
                  </div>
                </div>
                
                <div>
                  <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                    Company
                  </label>
                  <Input
                    type="text"
                    id="shipping-company"
                    name="shipping_company"
                    class="w-full"
                    disabled
                  />
                </div>
                
                <div>
                  <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                    Address Line 1
                  </label>
                  <Input
                    type="text"
                    id="shipping-address-1"
                    name="shipping_address_1"
                    class="w-full"
                    disabled
                  />
                </div>
                
                <div>
                  <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                    Address Line 2
                  </label>
                  <Input
                    type="text"
                    id="shipping-address-2"
                    name="shipping_address_2"
                    class="w-full"
                    disabled
                  />
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                      City
                    </label>
                    <Input
                      type="text"
                      id="shipping-city"
                      name="shipping_city"
                      class="w-full"
                      disabled
                    />
                  </div>
                  <div>
                    <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                      Postcode
                    </label>
                    <Input
                      type="text"
                      id="shipping-postcode"
                      name="shipping_postcode"
                      class="w-full"
                      disabled
                    />
                  </div>
                  <div>
                    <label class="block font-outfit font-medium text-sm mb-2 text-gray-700 dark:text-gray-300">
                      Country
                    </label>
                    <Input
                      type="text"
                      id="shipping-country"
                      name="shipping_country"
                      class="w-full"
                      disabled
                    />
                  </div>
                </div>
                
                <div class="flex flex-col sm:flex-row gap-3 pt-4 sm:pt-6 border-t border-gray-200 dark:border-gray-700 hidden" id="shipping-form-actions">
                  <Button type="submit" variant="primary" size="md" id="save-shipping-btn" class="flex items-center justify-center shadow-md hover:shadow-lg transition-shadow duration-300">
                    <Save class="w-4 h-4 mr-2" />
                    <span id="save-shipping-text">Save Changes</span>
                    <span id="save-shipping-spinner" class="hidden ml-2">
                      <Spinner size="sm" />
                    </span>
                  </Button>
                  <Button
                    type="button"
                    id="cancel-shipping-btn"
                    variant="outline"
                    size="md"
                    class="flex items-center justify-center hover:shadow-md transition-shadow duration-300"
                  >
                    <X class="w-4 h-4 mr-2" />
                    Cancel
                  </Button>
                </div>
              </form>
            </Card>
          </div>

          <!-- Profile Section -->
          <div id="profile-section" class="hidden animate-in fade-in slide-in-from-right duration-300">
            <Card variant="elevated" class="p-5 sm:p-6 lg:p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-4 mb-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <h2 class="font-outfit font-bold text-xl sm:text-2xl text-gray-900 dark:text-white">
                  Profile Information
                </h2>
                <button
                  id="edit-profile-btn"
                  class="flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 font-outfit font-medium text-sm sm:text-base transition-all duration-200 hover:shadow-sm active:scale-[0.98] focus:outline-none focus:ring-2 focus:ring-gray-300 dark:focus:ring-gray-600"
                >
                  <Edit2 class="w-4 h-4" />
                  <span>Edit</span>
                </button>
              </div>
              
              <!-- Success/Error Messages -->
              <div id="profile-message" class="hidden mb-4 p-4 rounded-lg"></div>
              
              <form id="profile-form" class="space-y-4 sm:space-y-5">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-5">
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      First Name
                    </label>
                    <Input
                      type="text"
                      id="first-name"
                      name="first_name"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                  <div class="space-y-2">
                    <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                      Last Name
                    </label>
                    <Input
                      type="text"
                      id="last-name"
                      name="last_name"
                      class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                      disabled
                    />
                  </div>
                </div>
                
                <div class="space-y-2">
                  <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                    Email
                  </label>
                  <Input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                    disabled
                  />
                </div>
                
                <div class="space-y-2">
                  <label class="block font-outfit font-medium text-sm text-gray-700 dark:text-gray-300">
                    Phone
                  </label>
                  <Input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full transition-all duration-200 disabled:opacity-60 disabled:cursor-not-allowed"
                    disabled
                  />
                </div>
                
                <div class="flex flex-col sm:flex-row gap-3 pt-4 sm:pt-6 border-t border-gray-200 dark:border-gray-700 hidden" id="profile-form-actions">
                  <Button type="submit" variant="primary" size="md" id="save-profile-btn" class="flex items-center justify-center shadow-md hover:shadow-lg transition-shadow duration-300">
                    <Save class="w-4 h-4 mr-2" />
                    <span id="save-profile-text">Save Changes</span>
                    <span id="save-profile-spinner" class="hidden ml-2">
                      <Spinner size="sm" />
                    </span>
                  </Button>
                  <Button
                    type="button"
                    id="cancel-edit-btn"
                    variant="outline"
                    size="md"
                    class="flex items-center justify-center hover:shadow-md transition-shadow duration-300"
                  >
                    <X class="w-4 h-4 mr-2" />
                    Cancel
                  </Button>
                </div>
              </form>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  const token = localStorage.getItem('auth_token');
  const loginRequired = document.getElementById('login-required');
  const accountContent = document.getElementById('account-content');
  let currentUser: any = null;
  let currentPage = 1;

  // Check authentication
  if (!token) {
    if (loginRequired) loginRequired.classList.remove('hidden');
    if (accountContent) accountContent.classList.add('hidden');
  } else {
    if (loginRequired) loginRequired.classList.add('hidden');
    if (accountContent) accountContent.classList.remove('hidden');
    loadUserData();
    loadOrders();
    
    // Handle hash navigation
    const hash = window.location.hash.replace('#', '');
    if (hash === 'orders') {
      setTimeout(() => {
        const navBtn = document.getElementById('nav-orders');
        if (navBtn) navBtn.click();
      }, 500);
