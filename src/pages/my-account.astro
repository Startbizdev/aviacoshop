  async function loadUserData() {
    try {
      const response = await fetch('/api/my-account/user', {
        headers: {
          'Authorization': `Bearer ${token}`,
        },
      });

      if (response.ok) {
        const data = await response.json();
        currentUser = data.user;
        
        // Vérifier si l'utilisateur est admin (vérification plus robuste)
        const user = data.user;
        const roles = user.roles || [];
        const capabilities = user.capabilities || {};
        
        // Vérifier plusieurs façons d'être admin
        const isAdmin = 
          (Array.isArray(roles) && (roles.includes('administrator') || roles.includes('shop_manager'))) ||
          capabilities.administrator === true ||
          user.capabilities?.administrator === true ||
          user.role === 'administrator' ||
          user.role === 'shop_manager';
        
        console.log('Admin check:', { 
          roles, 
          capabilities, 
          role: user.role, 
          isAdmin 
        });
        
        // Si c'est un admin, ne pas vérifier le statut du compte
        if (!isAdmin) {
          // Vérifier le statut du compte pour les non-admins
          const accountStatus = data.user.account_status || 'pending';
          
          // Si le compte n'est pas approuvé, rediriger vers account-pending
          if (accountStatus !== 'approved') {
            window.location.href = '/account-pending';
            return;
          }
        }
        
        displayUserData(data.user);
      } else {
        if (response.status === 401) {
          localStorage.removeItem('auth_token');
          localStorage.removeItem('user');
          window.location.href = '/login';
        }
      }
    } catch (error) {
      console.error('Error loading user data:', error);
