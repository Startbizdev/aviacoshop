        city: (document.getElementById('billing-city') as HTMLInputElement).value,
        postcode: (document.getElementById('billing-postcode') as HTMLInputElement).value,
        country: (document.getElementById('billing-country') as HTMLInputElement).value,
        email: (document.getElementById('billing-email') as HTMLInputElement).value,
        phone: (document.getElementById('billing-phone') as HTMLInputElement).value,
      }
    };

    try {
      const response = await fetch('/api/my-account/update-address', {
        method: 'PUT',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        const data = await response.json();
        currentUser = data.user;
        displayUserData(data.user);
        isEditingBilling = false;
        billingInputs.forEach(id => {
          const input = document.getElementById(id) as HTMLInputElement;
          if (input) input.disabled = true;
        });
        if (billingFormActions) billingFormActions.classList.add('hidden');
        if (editBillingBtn) editBillingBtn.classList.remove('hidden');
        
