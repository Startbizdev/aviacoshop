    }
  });

  // Address editing - Shipping
  let isEditingShipping = false;
  const editShippingBtn = document.getElementById('edit-shipping-btn');
  const cancelShippingBtn = document.getElementById('cancel-shipping-btn');
  const shippingForm = document.getElementById('shipping-form') as HTMLFormElement;
  const shippingFormActions = document.getElementById('shipping-form-actions');
  const shippingInputs = ['shipping-first-name', 'shipping-last-name', 'shipping-company', 'shipping-address-1', 'shipping-address-2', 'shipping-city', 'shipping-postcode', 'shipping-country'];

  editShippingBtn?.addEventListener('click', () => {
    isEditingShipping = true;
    shippingInputs.forEach(id => {
      const input = document.getElementById(id) as HTMLInputElement;
      if (input) input.disabled = false;
    });
    if (shippingFormActions) shippingFormActions.classList.remove('hidden');
    if (editShippingBtn) editShippingBtn.classList.add('hidden');
  });

  cancelShippingBtn?.addEventListener('click', () => {
    isEditingShipping = false;
    if (currentUser) displayUserData(currentUser);
    shippingInputs.forEach(id => {
      const input = document.getElementById(id) as HTMLInputElement;
      if (input) input.disabled = true;
    });
    if (shippingFormActions) shippingFormActions.classList.add('hidden');
    if (editShippingBtn) editShippingBtn.classList.remove('hidden');
  });

  shippingForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const saveBtn = document.getElementById('save-shipping-btn');
    const saveText = document.getElementById('save-shipping-text');
    const saveSpinner = document.getElementById('save-shipping-spinner');
    
    // Show loading state
    if (saveBtn) saveBtn.disabled = true;
    if (saveText) saveText.classList.add('hidden');
    if (saveSpinner) saveSpinner.classList.remove('hidden');
    
    const formData = {
      shipping: {
        first_name: (document.getElementById('shipping-first-name') as HTMLInputElement).value,
        last_name: (document.getElementById('shipping-last-name') as HTMLInputElement).value,
        company: (document.getElementById('shipping-company') as HTMLInputElement).value,
        address_1: (document.getElementById('shipping-address-1') as HTMLInputElement).value,
        address_2: (document.getElementById('shipping-address-2') as HTMLInputElement).value,
        city: (document.getElementById('shipping-city') as HTMLInputElement).value,
        postcode: (document.getElementById('shipping-postcode') as HTMLInputElement).value,
        country: (document.getElementById('shipping-country') as HTMLInputElement).value,
      }
    };

    try {
      const response = await fetch('/api/my-account/update-address', {
        method: 'PUT',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        const data = await response.json();
        currentUser = data.user;
        displayUserData(data.user);
        isEditingShipping = false;
        shippingInputs.forEach(id => {
          const input = document.getElementById(id) as HTMLInputElement;
          if (input) input.disabled = true;
        });
        if (shippingFormActions) shippingFormActions.classList.add('hidden');
        if (editShippingBtn) editShippingBtn.classList.remove('hidden');
        
        if (window.showToast) {
          window.showToast('Shipping address updated successfully!', 'success', 5000);
        }
      } else {
        const error = await response.json();
        if (window.showToast) {
          window.showToast(error.error || 'Failed to update shipping address', 'error', 6000);
        }
      }
    } catch (error) {
      console.error('Error updating shipping address:', error);
      if (window.showToast) {
        window.showToast('An error occurred while updating your shipping address', 'error', 6000);
      }
    } finally {
      // Hide loading state
      if (saveBtn) saveBtn.disabled = false;
      if (saveText) saveText.classList.remove('hidden');
      if (saveSpinner) saveSpinner.classList.add('hidden');
    }
  });

  // Logout
  document.getElementById('logout-btn')?.addEventListener('click', async () => {
    const confirmed = window.showToastConfirm 
      ? await window.showToastConfirm({
          message: 'Are you sure you want to log out?',
          confirmText: 'Log out',
          cancelText: 'Cancel',
          type: 'warning'
        })
      : confirm('Are you sure you want to log out?');
    
    if (confirmed) {
      localStorage.removeItem('auth_token');
      localStorage.removeItem('user');
      window.dispatchEvent(new Event('user-logged-out'));
      window.location.href = '/';
    }
  });
</script>

