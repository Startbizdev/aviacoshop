---
import AdminSidebar from '../components/molecules/AdminSidebar.astro';
import Toast from '../components/molecules/Toast.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Admin Dashboard' } = Astro.props;
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script is:inline>
      (function() {
        try {
          const html = document.documentElement;
          const stored = localStorage.getItem('theme');
          const theme = stored || 'light';
          
          if (theme === 'dark') {
            html.classList.add('dark');
          } else {
            html.classList.remove('dark');
          }
        } catch (e) {
          // Silent fallback
        }
      })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- SEO Meta Tags -->
    <title>{title} | Admin | Aviaco Shop</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="font-outfit bg-gray-50 dark:bg-gray-950 text-gray-900 dark:text-gray-100 min-h-screen admin-page">
    <div class="flex flex-col lg:flex-row h-screen overflow-hidden">
      <!-- Sidebar -->
      <AdminSidebar currentPath={currentPath} />
      
      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col overflow-hidden min-w-0">
        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto bg-gray-50 dark:bg-gray-950">
          <slot />
        </main>
      </div>
    </div>
    
    <Toast />
    
    <script is:inline>
      (function() {
        const root = document.documentElement;
        let currentTheme = root.classList.contains('dark') ? 'dark' : 'light';
        
        function setTheme(theme) {
          if (currentTheme === theme) return;
          currentTheme = theme;
          try {
            localStorage.setItem('theme', theme);
            root.classList.toggle('dark', theme === 'dark');
          } catch (e) {}
        }
        
        function toggleTheme() {
          setTheme(currentTheme === 'dark' ? 'light' : 'dark');
        }
        
        window.toggleTheme = toggleTheme;
        window.setTheme = setTheme;
        window.getTheme = () => currentTheme;
      })();
    </script>
  </body>
</html>

