---
interface Props {
  name: string;
  id?: string;
  label: string;
  options: { value: string; label: string }[];
  value?: string;
  required?: boolean;
  disabled?: boolean;
  class?: string;
}

const {
  name,
  id,
  label,
  options = [],
  value,
  required = false,
  disabled = false,
  class: className = '',
} = Astro.props;
---

<div class={className}>
  <label 
    for={id || name} 
    class="block mb-2.5 sm:mb-3 font-outfit font-medium text-sm sm:text-base text-gray-900 dark:text-white"
  >
    {label}
    {required && <span class="text-red-500 ml-1">*</span>}
  </label>
  <select
    name={name}
    id={id || name}
    required={required}
    disabled={disabled}
    class="w-full px-4 sm:px-5 py-3 sm:py-3.5 font-outfit text-sm sm:text-base text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200 appearance-none cursor-pointer"
  >
    {options.map((option) => (
      <option value={option.value} selected={option.value === value}>
        {option.label}
      </option>
    ))}
  </select>
</div>

