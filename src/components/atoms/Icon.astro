};

const iconPath = icons[name] || '';
const classes = `${sizeClasses[size]} ${className}`;
---

{iconPath && (
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    class={classes}
    set:html={iconPath}
  />
)}

