---
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
} = Astro.props;
---

<img
  src={typeof src === 'string' ? src : src.src}
  alt={alt}
  width={width}
  height={height}
  class={`${className} object-cover`}
  loading={loading}
/>

