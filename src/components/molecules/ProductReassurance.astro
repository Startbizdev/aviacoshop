---
import { Truck, Shield } from 'lucide-astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`flex items-center justify-center gap-3 sm:gap-4 md:gap-6 flex-wrap ${className}`}>
  <!-- DHL Shipping -->
  <div class="flex items-center gap-1.5 sm:gap-2 text-gray-700 dark:text-gray-300">
    <div class="flex-shrink-0 w-7 h-7 sm:w-8 sm:h-8 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center">
      <Truck class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-primary" />
    </div>
    <div class="flex flex-col">
      <span class="font-outfit font-semibold text-[11px] sm:text-xs text-gray-900 dark:text-white leading-tight">
        DHL Worldwide
      </span>
      <span class="font-outfit text-[9px] sm:text-[10px] text-gray-600 dark:text-gray-400 leading-tight">
        24-48h delivery
      </span>
    </div>
  </div>

  <!-- Secure Payment -->
  <div class="flex items-center gap-1.5 sm:gap-2 text-gray-700 dark:text-gray-300">
    <div class="flex-shrink-0 w-7 h-7 sm:w-8 sm:h-8 bg-primary/10 dark:bg-primary/20 rounded-full flex items-center justify-center">
      <Shield class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-primary" />
    </div>
    <div class="flex flex-col">
      <span class="font-outfit font-semibold text-[11px] sm:text-xs text-gray-900 dark:text-white leading-tight">
        Secure Payment
      </span>
      <span class="font-outfit text-[9px] sm:text-[10px] text-gray-600 dark:text-gray-400 leading-tight">
        SSL & 3D Secure
      </span>
    </div>
  </div>
</div>

