---
import Input from '../atoms/Input.astro';
import Icon from '../atoms/Icon.astro';
import Card from '../atoms/Card.astro';
import Spinner from '../atoms/Spinner.astro';

interface Props {
  uniqueId?: string;
}

const { uniqueId = 'desktop' } = Astro.props;
---

<div class="relative w-full max-w-2xl mx-auto" data-search-bar={uniqueId}>
  <div class="relative group">
    <Input
      type="search"
      id={`search-input-${uniqueId}`}
      name="search"
      placeholder="Search for a product..."
      class="pl-12 pr-4 transition-all duration-200 focus:shadow-lg focus:shadow-primary/10"
      data-search-input={uniqueId}
    />
    
    <!-- Search Icon / Spinner (same position) -->
    <div data-search-icon={uniqueId} class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 dark:text-gray-500 transition-all duration-200 group-focus-within:text-primary pointer-events-none">
      <Icon name="search" size="md" />
    </div>
    
    <!-- Loading Spinner (replaces search icon) -->
    <div data-search-loading={uniqueId} class="hidden absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none">
      <Spinner size="sm" />
    </div>
  </div>
  
  <!-- Suggestions dropdown -->
  <div
    data-search-suggestions={uniqueId}
    class="hidden absolute top-full left-0 right-0 mt-2 z-50 max-h-96 overflow-y-auto"
  >
    <Card variant="elevated" class="p-2 shadow-xl border border-gray-200 dark:border-gray-700">
      <div data-suggestions-list={uniqueId} class="space-y-1">
        <!-- Suggestions will be injected here by JavaScript -->
      </div>
      
      <!-- View All Results Link -->
      <div data-view-all-results={uniqueId} class="hidden mt-2 pt-2 border-t border-gray-200 dark:border-gray-700">
        <a
          data-view-all-link={uniqueId}
          href="#"
          class="flex items-center justify-center gap-2 p-3 text-sm font-medium text-primary hover:bg-primary/5 dark:hover:bg-primary/10 rounded-lg transition-colors group"
        >
          <span>View all results</span>
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </Card>
  </div>
</div>

<script>
  // Initialize each search bar instance separately
  function initSearchBar(container: HTMLElement, uniqueId: string) {
    let searchTimeout: NodeJS.Timeout;
    let logTimeout: NodeJS.Timeout;
    let currentIndex = -1;
    let suggestions: any[] = [];
    let lastQuery = '';
    
    const searchInput = container.querySelector(`[data-search-input="${uniqueId}"]`) as HTMLInputElement;
    const suggestionsContainer = container.querySelector(`[data-search-suggestions="${uniqueId}"]`) as HTMLElement;
    const suggestionsList = container.querySelector(`[data-suggestions-list="${uniqueId}"]`) as HTMLElement;
    const searchIcon = container.querySelector(`[data-search-icon="${uniqueId}"]`) as HTMLElement;
    const searchLoading = container.querySelector(`[data-search-loading="${uniqueId}"]`) as HTMLElement;
    const viewAllResults = container.querySelector(`[data-view-all-results="${uniqueId}"]`) as HTMLElement;
    const viewAllLink = container.querySelector(`[data-view-all-link="${uniqueId}"]`) as HTMLAnchorElement;
    
    if (!searchInput || !suggestionsContainer || !suggestionsList) {
      console.warn(`SearchBar ${uniqueId}: Required elements not found`);
      return;
    }

  // Function to highlight search text
  function highlightText(text: string, query: string): string {
    if (!query) return text;
    const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
    return text.replace(regex, '<mark class="bg-primary/20 text-primary font-semibold rounded px-1">$1</mark>');
  }

  // Function to format price
  function formatPrice(price: string | number): string {
    const numPrice = typeof price === 'string' ? parseFloat(price) : price;
    return new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'EUR',
      minimumFractionDigits: 2,
    }).format(numPrice);
  }

  // Function to display suggestions
  function displaySuggestions(products: any[], query: string) {
    suggestions = products;
    currentIndex = -1;
    
    if (products.length === 0) {
      suggestionsList.innerHTML = `
        <div class="p-6 text-center">
          <div class="text-gray-400 dark:text-gray-500 mb-2">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <p class="text-gray-500 dark:text-gray-400 font-medium">No products found</p>
          <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">Try different keywords</p>
        </div>
      `;
      viewAllResults.classList.add('hidden');
    } else {
      suggestionsList.innerHTML = products.map((product: any, index: number) => {
        const productName = product.name || 'Unnamed product';
        const productPrice = product.prices?.price || product.regular_price || '0';
        const productImage = product.images?.[0]?.src || '';
        const productId = product.id;
        
        return `
          <a
            href="/produit/${productId}"
            data-index="${index}"
            class="flex items-center gap-4 p-3 hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg transition-all duration-150 group focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 dark:focus:ring-offset-gray-900"
            tabindex="0"
          >
            <div class="flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden bg-gray-100 dark:bg-gray-700 group-hover:scale-105 transition-transform duration-150">
              ${productImage ? `
                <img
                  src="${productImage}"
                  alt="${productName}"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              ` : `
                <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-500">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              `}
            </div>
            <div class="flex-1 min-w-0">
              <h4 class="font-medium text-gray-900 dark:text-white group-hover:text-primary transition-colors truncate mb-1">
                ${highlightText(productName, query)}
              </h4>
              <p class="text-sm font-semibold text-primary">
                ${formatPrice(productPrice)}
              </p>
            </div>
            <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-4 h-4 text-gray-400 group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        `;
      }).join('');
      
      // Show "View all results" link
      if (query) {
        viewAllLink.href = `/catalogue?search=${encodeURIComponent(query)}`;
        viewAllResults.classList.remove('hidden');
      } else {
        viewAllResults.classList.add('hidden');
      }
    }
    
    suggestionsContainer.classList.remove('hidden');
  }

  // Function to log search without results
  async function logSearchWithoutResults(query: string) {
    // Annuler le timeout précédent si l'utilisateur continue à taper
    clearTimeout(logTimeout);
    
    // Attendre 2.5 secondes après la dernière frappe avant d'enregistrer
    logTimeout = setTimeout(async () => {
      try {
        // Récupérer le token si l'utilisateur est connecté
        const token = localStorage.getItem('auth_token');
        const headers: Record<string, string> = {
          'Content-Type': 'application/json',
        };
        
        if (token) {
          headers['Authorization'] = `Bearer ${token}`;
        }
        
        await fetch('/api/search-log', {
          method: 'POST',
          headers,
          body: JSON.stringify({
            query,
            results_count: 0,
          }),
        });
      } catch (error) {
        // Silencieux - on ne veut pas perturber l'expérience utilisateur
        console.debug('Failed to log search:', error);
      }
    }, 2500); // 2.5 secondes de délai
  }

  // Function to perform search
  async function performSearch(query: string) {
    if (query.length < 2) {
      suggestionsContainer.classList.add('hidden');
      searchLoading.classList.add('hidden');
      searchIcon.classList.remove('hidden');
      clearTimeout(logTimeout);
      lastQuery = '';
      return;
    }
    
    lastQuery = query;
    
    // Show spinner and hide search icon during search
    searchLoading.classList.remove('hidden');
    searchIcon.classList.add('hidden');
    
    try {
      const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
      
      if (!response.ok) {
        throw new Error('Search error');
      }
      
      const products = await response.json();
      displaySuggestions(products, query);
      
      // Si aucun résultat, programmer l'enregistrement après délai
      if (products.length === 0 && query.length >= 2) {
        logSearchWithoutResults(query);
      } else {
        // Annuler l'enregistrement si des résultats sont trouvés
        clearTimeout(logTimeout);
      }
    } catch (error) {
      console.error('Error searching products:', error);
      suggestionsList.innerHTML = `
        <div class="p-6 text-center">
          <div class="text-red-400 dark:text-red-500 mb-2">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <p class="text-gray-500 dark:text-gray-400 font-medium">Search error</p>
          <p class="text-sm text-gray-400 dark:text-gray-500 mt-1">Please try again</p>
        </div>
      `;
      suggestionsContainer.classList.remove('hidden');
    } finally {
      // After search, hide spinner and show search icon
      searchLoading.classList.add('hidden');
      searchIcon.classList.remove('hidden');
    }
  }

    // Search with debounce
    searchInput.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value.trim();
      
      clearTimeout(searchTimeout);
      
      if (query.length === 0) {
        suggestionsContainer.classList.add('hidden');
        if (searchLoading) searchLoading.classList.add('hidden');
        if (searchIcon) searchIcon.classList.remove('hidden');
        return;
      }
      
      searchTimeout = setTimeout(() => {
        performSearch(query);
      }, 300);
    });
    
    // Keyboard navigation
    searchInput.addEventListener('keydown', (e) => {
      const items = suggestionsList.querySelectorAll('a[data-index]') as NodeListOf<HTMLAnchorElement>;
      
      if (e.key === 'Escape') {
        suggestionsContainer.classList.add('hidden');
        searchInput.blur();
        return;
      }
      
      if (e.key === 'Enter' && currentIndex >= 0 && items[currentIndex]) {
        e.preventDefault();
        items[currentIndex].click();
        return;
      }
      
      if (e.key === 'ArrowDown') {
        e.preventDefault();
        currentIndex = Math.min(currentIndex + 1, items.length - 1);
        items[currentIndex]?.focus();
        items[currentIndex]?.scrollIntoView({ block: 'nearest' });
        return;
      }
      
      if (e.key === 'ArrowUp') {
        e.preventDefault();
        currentIndex = Math.max(currentIndex - 1, -1);
        if (currentIndex === -1) {
          searchInput.focus();
        } else {
          items[currentIndex]?.focus();
          items[currentIndex]?.scrollIntoView({ block: 'nearest' });
        }
        return;
      }
    });
    
    // Close suggestions when clicking outside
    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (
        !searchInput.contains(target) &&
        !suggestionsContainer.contains(target)
      ) {
        suggestionsContainer.classList.add('hidden');
        currentIndex = -1;
      }
    });
  }

  // Initialize all search bars on the page
  document.addEventListener('DOMContentLoaded', () => {
    const searchBars = document.querySelectorAll('[data-search-bar]');
    searchBars.forEach((container) => {
      const uniqueId = (container as HTMLElement).getAttribute('data-search-bar');
      if (uniqueId) {
        initSearchBar(container as HTMLElement, uniqueId);
      }
    });
  });
</script>

<style>
  /* Animation for dropdown */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  #search-suggestions:not(.hidden) {
    animation: fadeIn 0.2s ease-out;
  }
  
  /* Custom scrollbar for suggestions */
  #search-suggestions::-webkit-scrollbar {
    width: 6px;
  }
  
  #search-suggestions::-webkit-scrollbar-track {
    background: transparent;
  }
  
  #search-suggestions::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
  }
  
  .dark #search-suggestions::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
  }
  
  /* Style for mark (highlight) */
  mark {
    background: rgba(var(--primary-rgb, 59, 130, 246), 0.2);
    color: rgb(var(--primary-rgb, 59, 130, 246));
    padding: 0 2px;
    border-radius: 2px;
  }
  
  /* Hide native search clear button when spinner is visible */
  #search-loading:not(.hidden) ~ * input[type="search"]::-webkit-search-cancel-button {
    display: none;
  }
</style>
