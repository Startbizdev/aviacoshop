---
import Card from '../atoms/Card.astro';
import Icon from '../atoms/Icon.astro';
import Button from '../atoms/Button.astro';
import Spinner from '../atoms/Spinner.astro';
---

<div
  id="customer-sheet"
  class="fixed inset-0 z-[100] hidden"
  aria-hidden="true"
>
  <!-- Backdrop -->
  <div
    id="customer-sheet-backdrop"
    class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity duration-300"
  ></div>

  <!-- Sheet Content -->
  <div
    id="customer-sheet-content"
    class="fixed right-0 top-0 h-full w-full sm:w-full md:max-w-2xl bg-white dark:bg-gray-900 shadow-2xl transform transition-transform duration-300 ease-out overflow-hidden flex flex-col translate-x-full"
  >
    <!-- Header -->
    <div class="flex items-center justify-between px-3 sm:px-4 md:px-5 lg:px-6 py-3 sm:py-4 border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 sticky top-0 z-10 shadow-sm">
      <div class="flex items-center gap-2 sm:gap-3 min-w-0 flex-1">
        <h2 class="font-outfit font-semibold text-base sm:text-lg text-gray-900 dark:text-white truncate">
          Customer Details
        </h2>
      </div>
      <button
        id="customer-sheet-close"
        class="w-8 h-8 sm:w-9 sm:h-9 flex items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 active:scale-95 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-all duration-200 flex-shrink-0"
        aria-label="Close"
      >
        <Icon name="close" size="sm" />
      </button>
    </div>

    <!-- Loading State -->
    <div id="customer-sheet-loading" class="flex-1 flex items-center justify-center p-4 sm:p-6">
      <div class="flex flex-col items-center gap-3 sm:gap-4">
        <Spinner size="lg" />
        <p class="font-outfit text-xs sm:text-sm text-gray-600 dark:text-gray-400">Loading details...</p>
      </div>
    </div>

    <!-- Content -->
    <div
      id="customer-sheet-body"
      class="flex-1 overflow-y-auto overscroll-contain px-3 sm:px-4 md:px-5 lg:px-6 py-3 sm:py-4 md:py-5 lg:py-6 hidden"
    >
      <!-- Customer Info -->
      <div id="customer-info-section" class="space-y-3 sm:space-y-4">
        <!-- Customer Header Card -->
        <Card variant="elevated" class="p-3 sm:p-4 md:p-5">
          <div class="flex flex-col gap-3 sm:gap-4">
            <!-- Avatar and Name Row -->
            <div class="flex items-start gap-3 sm:gap-4">
              <div class="w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 bg-gradient-to-br from-primary/20 to-primary/10 dark:from-primary/30 dark:to-primary/20 rounded-full flex items-center justify-center flex-shrink-0 ring-2 ring-primary/10 shadow-sm">
                <span id="customer-avatar" class="font-outfit font-semibold text-primary text-base sm:text-lg md:text-xl">
                  U
                </span>
              </div>
              <div class="flex-1 min-w-0 pt-0.5 sm:pt-1">
                <h3 id="customer-name" class="font-outfit font-semibold text-sm sm:text-base md:text-lg text-gray-900 dark:text-white mb-1 truncate">
                  -
                </h3>
                <p id="customer-email" class="font-outfit text-xs sm:text-sm text-gray-600 dark:text-gray-400 truncate mb-0.5">
                  -
                </p>
                <p id="customer-username" class="font-outfit text-[10px] sm:text-xs text-gray-500 dark:text-gray-500 truncate">
                  -
                </p>
              </div>
            </div>
            <!-- Actions Row -->
            <div class="flex flex-wrap gap-2 pt-2 border-t border-gray-100 dark:border-gray-800">
              <Button
                id="customer-delete-btn"
                variant="outline"
                size="sm"
                class="!text-red-600 dark:!text-red-400 !border-red-300 dark:!border-red-700 hover:bg-red-50 dark:hover:bg-red-900/20 !hover:border-red-400 dark:!hover:border-red-600 !hover:text-red-600 dark:!hover:text-red-400 active:scale-95 transition-all duration-200 flex items-center gap-1.5 sm:gap-2"
              >
                <Icon name="trash-2" size="sm" />
                <span>Delete Customer</span>
              </Button>
            </div>
          </div>
        </Card>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-2.5 sm:gap-3">
          <Card variant="elevated" class="p-3 sm:p-4">
            <div class="flex items-start gap-2.5 sm:gap-3">
              <div class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 flex items-center justify-center rounded-lg bg-primary/10 dark:bg-primary/20 flex-shrink-0">
                <Icon name="shopping-bag" size="sm" class="text-primary" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-1 uppercase tracking-wide">
                  Orders
                </p>
                <p id="customer-total-orders" class="font-outfit font-bold text-lg sm:text-xl md:text-2xl text-gray-900 dark:text-white">
                  0
                </p>
              </div>
            </div>
          </Card>
          
          <Card variant="elevated" class="p-3 sm:p-4">
            <div class="flex items-start gap-2.5 sm:gap-3">
              <div class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 flex items-center justify-center rounded-lg bg-green-100 dark:bg-green-900/20 flex-shrink-0">
                <Icon name="euro" size="sm" class="text-green-600 dark:text-green-400" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-1 uppercase tracking-wide">
                  Total Revenue
                </p>
                <p id="customer-total-revenue" class="font-outfit font-bold text-lg sm:text-xl md:text-2xl text-green-600 dark:text-green-400">
                  0 €
                </p>
              </div>
            </div>
          </Card>
          
          <Card variant="elevated" class="p-3 sm:p-4">
            <div class="flex items-start gap-2.5 sm:gap-3">
              <div class="w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 flex items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900/20 flex-shrink-0">
                <Icon name="trending-up" size="sm" class="text-blue-600 dark:text-blue-400" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-1 uppercase tracking-wide">
                  Average Order
                </p>
                <p id="customer-avg-order" class="font-outfit font-bold text-lg sm:text-xl md:text-2xl text-blue-600 dark:text-blue-400">
                  0 €
                </p>
              </div>
            </div>
          </Card>
        </div>

        <!-- Customer Details -->
        <Card variant="elevated" class="p-3 sm:p-4 md:p-5">
          <h4 class="font-outfit font-semibold text-sm sm:text-base text-gray-900 dark:text-white mb-3 sm:mb-4 flex items-center gap-2">
            <Icon name="user-circle" size="sm" class="text-gray-400 dark:text-gray-500" />
            <span>Information</span>
          </h4>
          <div class="space-y-3 sm:space-y-4">
            <!-- Registration Date -->
            <div class="flex items-start gap-2.5 sm:gap-3 group/item">
              <div class="w-4 h-4 flex items-center justify-center flex-shrink-0 mt-0.5 rounded-md bg-gray-50 dark:bg-gray-800/50 group-hover/item:bg-primary/10 transition-colors duration-200">
                <Icon name="calendar" size="sm" class="text-gray-400 dark:text-gray-500 group-hover/item:text-primary transition-colors duration-200" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-0.5 uppercase tracking-wide">
                  Registration Date
                </p>
                <p id="customer-registered" class="font-outfit text-xs sm:text-sm text-gray-900 dark:text-white leading-relaxed">-</p>
              </div>
            </div>
            
            <!-- Phone -->
            <div class="flex items-start gap-2.5 sm:gap-3 group/item">
              <div class="w-4 h-4 flex items-center justify-center flex-shrink-0 mt-0.5 rounded-md bg-gray-50 dark:bg-gray-800/50 group-hover/item:bg-primary/10 transition-colors duration-200">
                <Icon name="user" size="sm" class="text-gray-400 dark:text-gray-500 group-hover/item:text-primary transition-colors duration-200" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-0.5 uppercase tracking-wide">
                  Phone
                </p>
                <p id="customer-phone" class="font-outfit text-xs sm:text-sm text-gray-900 dark:text-white leading-relaxed">-</p>
              </div>
            </div>
            
            <!-- Billing Address -->
            <div class="flex items-start gap-2.5 sm:gap-3 group/item">
              <div class="w-4 h-4 flex items-center justify-center flex-shrink-0 mt-0.5 rounded-md bg-gray-50 dark:bg-gray-800/50 group-hover/item:bg-primary/10 transition-colors duration-200">
                <Icon name="map-pin" size="sm" class="text-gray-400 dark:text-gray-500 group-hover/item:text-primary transition-colors duration-200" />
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-outfit text-[10px] sm:text-xs font-medium text-gray-500 dark:text-gray-400 mb-0.5 uppercase tracking-wide">
                  Billing Address
                </p>
                <p id="customer-billing" class="font-outfit text-xs sm:text-sm text-gray-900 dark:text-white leading-relaxed">-</p>
              </div>
            </div>
          </div>
        </Card>

        <!-- Orders List -->
        <Card variant="elevated" class="p-3 sm:p-4 md:p-5">
          <h4 class="font-outfit font-semibold text-sm sm:text-base text-gray-900 dark:text-white mb-3 sm:mb-4 flex items-center gap-2">
            <Icon name="shopping-bag" size="sm" class="text-gray-400 dark:text-gray-500" />
            <span>Orders</span>
          </h4>
          <div id="customer-orders-list" class="space-y-2 sm:space-y-2.5">
            <!-- Orders will be inserted here -->
          </div>
          <div id="customer-orders-empty" class="hidden text-center py-6 sm:py-8">
            <div class="w-12 h-12 sm:w-14 sm:h-14 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
              <Icon name="shopping-bag" size="md" class="text-gray-400 dark:text-gray-500" />
            </div>
            <p class="font-outfit text-xs sm:text-sm text-gray-600 dark:text-gray-400">No orders found</p>
          </div>
        </Card>
      </div>
    </div>
  </div>
</div>

<script>
  let customerSheet: HTMLElement | null = null;
  let customerSheetBackdrop: HTMLElement | null = null;
  let customerSheetContent: HTMLElement | null = null;
  let customerSheetClose: HTMLElement | null = null;
  let customerSheetLoading: HTMLElement | null = null;
  let customerSheetBody: HTMLElement | null = null;
  let currentCustomerId: number | null = null;

  function openCustomerSheet(customerId: number) {
    currentCustomerId = customerId;
    
    if (customerSheet && customerSheetContent && customerSheetBackdrop) {
      customerSheet.classList.remove('hidden');
      customerSheetLoading?.classList.remove('hidden');
      customerSheetBody?.classList.add('hidden');
      
      // Force reflow to ensure animation
      requestAnimationFrame(() => {
        customerSheetBackdrop.style.opacity = '0';
        customerSheetContent.classList.remove('translate-x-full');
        requestAnimationFrame(() => {
          customerSheetBackdrop.style.opacity = '1';
        });
      });
      
      document.body.style.overflow = 'hidden';
      
      // Load customer details
      loadCustomerDetails(customerId);
    }
  }

  function closeCustomerSheet() {
    if (customerSheet && customerSheetContent && customerSheetBackdrop) {
      customerSheetContent.classList.add('translate-x-full');
      customerSheetBackdrop.style.opacity = '0';
      setTimeout(() => {
        if (customerSheet) {
          customerSheet.classList.add('hidden');
        }
        document.body.style.overflow = '';
        currentCustomerId = null;
      }, 300);
    }
  }

  async function loadCustomerDetails(customerId: number) {
    const token = localStorage.getItem('auth_token');
    if (!token) {
      closeCustomerSheet();
      return;
    }

    try {
      const response = await fetch(`/api/admin/customer-details?id=${customerId}`, {
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
      });

      if (!response.ok) {
        throw new Error('Failed to load customer details');
      }

      const data = await response.json();
      renderCustomerDetails(data);
      
      customerSheetLoading?.classList.add('hidden');
      customerSheetBody?.classList.remove('hidden');
    } catch (error) {
      console.error('Error loading customer details:', error);
      customerSheetLoading?.classList.add('hidden');
      // Show error state
    }
  }

  function renderCustomerDetails(data: any) {
    const customer = data.customer;
    const orders = data.orders || [];
    const stats = data.stats || { totalOrders: 0, totalRevenue: '0.00', averageOrderValue: '0.00' };

    // Customer info
    const avatarEl = document.getElementById('customer-avatar');
    const nameEl = document.getElementById('customer-name');
    const emailEl = document.getElementById('customer-email');
    const usernameEl = document.getElementById('customer-username');
    const registeredEl = document.getElementById('customer-registered');
    const phoneEl = document.getElementById('customer-phone');
    const billingEl = document.getElementById('customer-billing');

    if (avatarEl) {
      const firstName = customer.first_name || '';
      const lastName = customer.last_name || '';
      const username = customer.username || '';
      const initial = firstName ? firstName[0].toUpperCase() : (lastName ? lastName[0].toUpperCase() : username[0]?.toUpperCase() || 'U');
      avatarEl.textContent = initial;
    }

    if (nameEl) {
      const fullName = `${customer.first_name || ''} ${customer.last_name || ''}`.trim();
      nameEl.textContent = fullName || customer.username || '-';
    }

    if (emailEl) {
      emailEl.textContent = customer.email || '-';
    }

    if (usernameEl) {
      usernameEl.textContent = `@${customer.username || '-'}`;
    }

    if (registeredEl) {
      const date = customer.date_created ? new Date(customer.date_created) : null;
      registeredEl.textContent = date ? date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      }) : '-';
    }

    if (phoneEl) {
      phoneEl.textContent = customer.billing?.phone || '-';
    }

    if (billingEl) {
      const billing = customer.billing;
      if (billing?.address_1) {
        const address = [
          billing.address_1,
          billing.address_2,
          `${billing.city || ''} ${billing.postcode || ''}`.trim(),
          billing.country || '',
        ].filter(Boolean).join(', ');
        billingEl.textContent = address || '-';
      } else {
        billingEl.textContent = '-';
      }
    }

    // Stats
    const totalOrdersEl = document.getElementById('customer-total-orders');
    const totalRevenueEl = document.getElementById('customer-total-revenue');
    const avgOrderEl = document.getElementById('customer-avg-order');

    if (totalOrdersEl) totalOrdersEl.textContent = stats.totalOrders.toString();
    if (totalRevenueEl) totalRevenueEl.textContent = `${parseFloat(stats.totalRevenue).toFixed(2)} €`;
    if (avgOrderEl) avgOrderEl.textContent = `${parseFloat(stats.averageOrderValue).toFixed(2)} €`;

    // Orders
    renderOrders(orders);
  }

  function renderOrders(orders: any[]) {
    const ordersListEl = document.getElementById('customer-orders-list');
    const ordersEmptyEl = document.getElementById('customer-orders-empty');

    if (!ordersListEl || !ordersEmptyEl) return;

    if (orders.length === 0) {
      ordersListEl.innerHTML = '';
      ordersEmptyEl.classList.remove('hidden');
      return;
    }

    ordersEmptyEl.classList.add('hidden');

    ordersListEl.innerHTML = orders.map(order => {
      const date = new Date(order.date_created);
      const statusColors: Record<string, string> = {
        completed: 'bg-green-100 dark:bg-green-900/20 text-green-700 dark:text-green-400',
        processing: 'bg-blue-100 dark:bg-blue-900/20 text-blue-700 dark:text-blue-400',
        pending: 'bg-yellow-100 dark:bg-yellow-900/20 text-yellow-700 dark:text-yellow-400',
        cancelled: 'bg-red-100 dark:bg-red-900/20 text-red-700 dark:text-red-400',
        refunded: 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-400',
      };
      const statusColor = statusColors[order.status] || 'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-400';
      
      return `
        <div class="flex flex-col gap-2.5 sm:gap-3 p-2.5 sm:p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800/50 hover:border-primary/30 transition-all duration-200">
          <div class="flex items-start justify-between gap-2 sm:gap-3">
            <div class="flex-1 min-w-0">
              <div class="flex flex-wrap items-center gap-1.5 sm:gap-2 mb-1.5">
                <span class="font-outfit font-semibold text-xs sm:text-sm text-gray-900 dark:text-white">
                  #${order.number || order.id}
                </span>
                <span class="px-2 py-0.5 rounded-full text-[10px] sm:text-xs font-medium ${statusColor}">
                  ${order.status || 'unknown'}
                </span>
              </div>
              <p class="font-outfit text-[10px] sm:text-xs text-gray-600 dark:text-gray-400">
                ${date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </p>
            </div>
            <span class="font-outfit font-bold text-xs sm:text-sm text-gray-900 dark:text-white flex-shrink-0">
              ${parseFloat(order.total || '0').toFixed(2)} €
            </span>
          </div>
          <div class="flex justify-end pt-1.5 border-t border-gray-100 dark:border-gray-800">
            <a 
              href="/commande/${order.id}" 
              class="px-2.5 sm:px-3 py-1.5 sm:py-2 rounded-lg bg-primary/10 text-primary hover:bg-primary/20 active:scale-95 transition-all duration-200 font-outfit text-xs sm:text-sm font-medium flex items-center gap-1.5 sm:gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span>View Order</span>
            </a>
          </div>
        </div>
      `;
    }).join('');
  }

  async function deleteCustomer() {
    if (!currentCustomerId) return;

    const confirmed = confirm('Are you sure you want to delete this customer? This action cannot be undone.');
    if (!confirmed) return;

    const token = localStorage.getItem('auth_token');
    if (!token) return;

    const deleteBtn = document.getElementById('customer-delete-btn') as HTMLButtonElement;
    if (deleteBtn) {
      deleteBtn.disabled = true;
      // Préserver les classes de couleur du bouton avec !important
      deleteBtn.classList.add('!text-red-600', 'dark:!text-red-400', '!border-red-300', 'dark:!border-red-700', '!hover:text-red-600', 'dark:!hover:text-red-400', '!hover:border-red-400', 'dark:!hover:border-red-600');
      deleteBtn.classList.remove('text-primary', 'border-primary', 'hover:text-white', 'hover:border-primary');
      deleteBtn.innerHTML = '<svg class="w-4 h-4 animate-spin !text-red-600 dark:!text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg><span class="!text-red-600 dark:!text-red-400">Deleting...</span>';
    }

    try {
      const response = await fetch('/api/admin/delete-customer', {
        method: 'DELETE',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ customerId: currentCustomerId }),
      });

      if (!response.ok) {
        throw new Error('Failed to delete customer');
      }

      if (window.showToast) {
        window.showToast('Customer deleted successfully', 'success', 3000);
      }

      closeCustomerSheet();
      
      // Reload customers list if callback exists
      if (window.reloadCustomersList) {
        window.reloadCustomersList();
      }
    } catch (error) {
      console.error('Error deleting customer:', error);
      if (window.showToast) {
        window.showToast('Error deleting customer', 'error', 5000);
      }
    } finally {
      if (deleteBtn) {
        deleteBtn.disabled = false;
        // S'assurer que les classes de couleur sont préservées avec !important
        deleteBtn.classList.add('!text-red-600', 'dark:!text-red-400', '!border-red-300', 'dark:!border-red-700', '!hover:text-red-600', 'dark:!hover:text-red-400', '!hover:border-red-400', 'dark:!hover:border-red-600');
        deleteBtn.classList.remove('text-primary', 'border-primary', 'hover:text-white', 'hover:border-primary');
        deleteBtn.innerHTML = '<svg class="w-4 h-4 !text-red-600 dark:!text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg><span class="!text-red-600 dark:!text-red-400">Delete Customer</span>';
      }
    }
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    customerSheet = document.getElementById('customer-sheet');
    customerSheetBackdrop = document.getElementById('customer-sheet-backdrop');
    customerSheetContent = document.getElementById('customer-sheet-content');
    customerSheetClose = document.getElementById('customer-sheet-close');
    customerSheetLoading = document.getElementById('customer-sheet-loading');
    customerSheetBody = document.getElementById('customer-sheet-body');

    if (customerSheetClose) {
      customerSheetClose.addEventListener('click', closeCustomerSheet);
    }

    if (customerSheetBackdrop) {
      customerSheetBackdrop.addEventListener('click', closeCustomerSheet);
    }

    const deleteBtn = document.getElementById('customer-delete-btn');
    if (deleteBtn) {
      deleteBtn.addEventListener('click', deleteCustomer);
    }

    // Close on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && customerSheet && !customerSheet.classList.contains('hidden')) {
        closeCustomerSheet();
      }
    });
  });

  // Expose openCustomerSheet globally
  window.openCustomerSheet = openCustomerSheet;
</script>

