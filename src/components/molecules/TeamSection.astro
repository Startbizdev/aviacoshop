---
import TeamGroup from './TeamGroup.astro';

interface TeamGroupData {
  title: string;
  members: Array<{
    name: string;
    role: string;
    image?: string;
  }>;
  topMargin?: string; // Marge en haut personnalisable pour chaque groupe
}

interface Props {
  title: string;
  description?: string;
  groups: TeamGroupData[];
}

const { title, description, groups } = Astro.props;
---

<section class="pt-12 md:pt-16 pb-8 md:pb-12">
  <div class="container mx-auto px-4">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="font-outfit font-bold text-3xl md:text-4xl lg:text-5xl mb-4 md:mb-6 text-gray-900 dark:text-white">
          {title}
        </h2>
        {description && (
          <p class="font-outfit text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
            {description}
          </p>
        )}
      </div>
    </div>
  </div>
</section>

{groups.map((group, index) => (
  <TeamGroup
    title={group.title}
    members={group.members}
    class={index % 2 === 0 ? 'bg-white dark:bg-gray-900' : 'bg-gray-50 dark:bg-gray-800/50'}
    topMargin={group.topMargin}
  />
))}

