<div id="toast-container" class="fixed top-4 right-4 z-[9999] flex flex-col gap-3 pointer-events-none max-w-md w-full sm:w-auto">
  <!-- Les toasts seront ajoutés dynamiquement ici -->
</div>

<script>
  interface ToastOptions {
    message: string;
    type?: 'success' | 'error' | 'warning' | 'info';
    duration?: number;
    action?: {
      label: string;
      callback: () => void;
    };
  }

  interface ToastConfirmOptions {
    message: string;
    confirmText?: string;
    cancelText?: string;
    type?: 'success' | 'error' | 'warning' | 'info';
  }

  class ToastManager {
    private container: HTMLElement | null = null;
    private toasts: Map<string, HTMLElement> = new Map();
    private callbacks: Map<string, () => void> = new Map();

    init() {
      this.container = document.getElementById('toast-container');
      if (!this.container) {
        console.error('Toast container not found');
        return;
      }
    }

    private createToast(options: ToastOptions): string {
      if (!this.container) {
        this.init();
        if (!this.container) return '';
      }

      const id = `toast-${Date.now()}-${Math.random().toString(36).substr(2, 9)}`;
      const {
        message,
        type = 'info',
        duration = 5000,
        action
      } = options;

      const typeConfig = {
        success: {
          bg: 'bg-gradient-to-r from-green-50 to-green-100/50 dark:from-green-900/20 dark:to-green-900/10',
          border: 'border-green-200 dark:border-green-800',
          text: 'text-green-800 dark:text-green-400',
          icon: `<svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>`
        },
        error: {
          bg: 'bg-gradient-to-r from-red-50 to-red-100/50 dark:from-red-900/20 dark:to-red-900/10',
          border: 'border-red-200 dark:border-red-800',
          text: 'text-red-800 dark:text-red-400',
          icon: `<svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>`
        },
        warning: {
          bg: 'bg-gradient-to-r from-yellow-50 to-yellow-100/50 dark:from-yellow-900/20 dark:to-yellow-900/10',
          border: 'border-yellow-200 dark:border-yellow-800',
          text: 'text-yellow-800 dark:text-yellow-400',
          icon: `<svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>`
        },
        info: {
          bg: 'bg-gradient-to-r from-blue-50 to-blue-100/50 dark:from-blue-900/20 dark:to-blue-900/10',
          border: 'border-blue-200 dark:border-blue-800',
          text: 'text-blue-800 dark:text-blue-400',
          icon: `<svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>`
        }
      };

      const config = typeConfig[type];
      
      const toast = document.createElement('div');
      toast.id = id;
      toast.className = `pointer-events-auto relative flex items-start gap-3 p-4 rounded-xl shadow-lg border-2 ${config.bg} ${config.border} ${config.text} transform transition-all duration-300 ease-out translate-x-full opacity-0`;
      toast.setAttribute('role', 'alert');
      toast.setAttribute('aria-live', type === 'error' ? 'assertive' : 'polite');

      const iconHtml = config.icon;

      toast.innerHTML = `
        <div class="flex-shrink-0 mt-0.5">
          ${iconHtml}
        </div>
        <div class="flex-1 min-w-0">
          <p class="font-outfit text-sm sm:text-base leading-relaxed break-words">${this.escapeHtml(message)}</p>
        </div>
        ${action ? `<button id="toast-action-${id}" class="ml-auto px-3 py-1.5 text-xs font-semibold rounded-lg ${config.bg} ${config.text} hover:opacity-80 transition-opacity">
            ${this.escapeHtml(action.label)}
          </button>` : ''}
        <button 
          id="toast-close-${id}"
          class="flex-shrink-0 w-5 h-5 flex items-center justify-center rounded hover:opacity-70 transition-opacity ${config.text}"
          aria-label="Fermer"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      `;

      this.container!.appendChild(toast);
      this.toasts.set(id, toast);

      // Attacher les événements
      const closeBtn = toast.querySelector(`#toast-close-${id}`) as HTMLButtonElement;
      if (closeBtn) {
        closeBtn.addEventListener('click', () => this.remove(id));
      }

      if (action) {
        const actionBtn = toast.querySelector(`#toast-action-${id}`) as HTMLButtonElement;
        if (actionBtn) {
          this.callbacks.set(id, action.callback);
          actionBtn.addEventListener('click', () => {
            this.remove(id);
            const callback = this.callbacks.get(id);
            if (callback) {
              callback();
              this.callbacks.delete(id);
            }
          });
        }
      }

      // Animation d'entrée
      requestAnimationFrame(() => {
        toast.classList.remove('translate-x-full', 'opacity-0');
        toast.classList.add('translate-x-0', 'opacity-100');
      });

      // Auto-suppression si durée spécifiée
      if (duration > 0) {
        setTimeout(() => {
          this.remove(id);
        }, duration);
      }

      return id;
    }

    success(message: string, duration?: number): string {
      return this.createToast({ message, type: 'success', duration });
    }

    error(message: string, duration?: number): string {
      return this.createToast({ message, type: 'error', duration });
    }

    warning(message: string, duration?: number): string {
      return this.createToast({ message, type: 'warning', duration });
    }

    info(message: string, duration?: number): string {
      return this.createToast({ message, type: 'info', duration });
    }

    show(options: ToastOptions): string {
      return this.createToast(options);
    }

    remove(id: string) {
      const toast = this.toasts.get(id);
      if (!toast) return;

      toast.classList.add('translate-x-full', 'opacity-0');
      
      setTimeout(() => {
        toast.remove();
        this.toasts.delete(id);
        this.callbacks.delete(id);
      }, 300);
    }

    confirm(options: ToastConfirmOptions): Promise<boolean> {
      return new Promise((resolve) => {
        const {
          message,
          confirmText = 'Confirmer',
          cancelText = 'Annuler',
          type = 'warning'
        } = options;

        const id = this.createToast({
          message,
          type,
          duration: 0, // Pas d'auto-suppression
          action: {
            label: confirmText,
            callback: () => {
              this.remove(id);
              resolve(true);
            }
          }
        });

        // Ajouter le bouton annuler
        const toast = this.toasts.get(id);
        if (toast) {
          const cancelBtn = document.createElement('button');
          cancelBtn.className = `px-3 py-1.5 text-xs font-semibold rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:opacity-80 transition-opacity`;
          cancelBtn.textContent = cancelText;
          cancelBtn.addEventListener('click', () => {
            this.remove(id);
            resolve(false);
          });

          const actionBtn = toast.querySelector(`#toast-action-${id}`);
          if (actionBtn && actionBtn.parentElement) {
            actionBtn.parentElement.insertBefore(cancelBtn, actionBtn);
          }
        }
      });
    }

    private escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
  }

  // Initialiser le gestionnaire de toast
  if (typeof window !== 'undefined') {
    window.toastManager = new ToastManager();
    
    // Initialiser quand le DOM est prêt
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        window.toastManager.init();
      });
    } else {
      window.toastManager.init();
    }

    // Fonctions globales pour faciliter l'utilisation
    window.showToast = (message: string, type: 'success' | 'error' | 'warning' | 'info' = 'info', duration?: number) => {
      return window.toastManager[type](message, duration);
    };

    window.showToastConfirm = (options: ToastConfirmOptions) => {
      return window.toastManager.confirm(options);
    };
  }
</script>

<style>
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOutRight {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(100%);
      opacity: 0;
    }
  }

  #toast-container {
    max-height: calc(100vh - 2rem);
    overflow-y: auto;
  }

  #toast-container::-webkit-scrollbar {
    width: 4px;
  }

  #toast-container::-webkit-scrollbar-track {
    background: transparent;
  }

  #toast-container::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 2px;
  }

  .dark #toast-container::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
  }
</style>

