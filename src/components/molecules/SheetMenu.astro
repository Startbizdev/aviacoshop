<script>
  // Menu functionality
  const closeBtn = document.getElementById('close-sheet-menu-btn');
  const menuOverlay = document.getElementById('sheet-menu');
  
  function closeMenu() {
    if (menuOverlay) {
      menuOverlay.classList.remove('translate-x-0');
      menuOverlay.classList.add('-translate-x-full');
      document.body.style.overflow = '';
    }
  }
  
  function openMenu() {
    if (menuOverlay) {
      menuOverlay.classList.remove('-translate-x-full');
      menuOverlay.classList.add('translate-x-0');
      document.body.style.overflow = 'hidden';
    }
  }
  
  if (closeBtn && menuOverlay) {
    // Close button
    closeBtn.addEventListener('click', closeMenu);
    
    // Close on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && menuOverlay.classList.contains('translate-x-0')) {
        closeMenu();
      }
    });
    
    // Close when clicking outside menu (on overlay)
    menuOverlay.addEventListener('click', (e) => {
      if (e.target === menuOverlay) {
        closeMenu();
      }
    });
    
    // Close menu when clicking any navigation link
    const menuLinks = menuOverlay.querySelectorAll('a[href]');
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        setTimeout(closeMenu, 150);
      });
    });
  }
  
  // Expose openMenu function globally for Header component
  window.openSheetMenu = openMenu;
  
  // Check if user is logged in and update menu accordingly
  function updateMenuForAuth() {
    const token = localStorage.getItem('auth_token');
    const myAccountLink = document.getElementById('my-account-link');
    const signInLink = document.getElementById('sign-in-link');
    const accountText = document.getElementById('account-text');
    
    if (token) {
      // User is logged in
      if (myAccountLink) {
        myAccountLink.classList.remove('hidden');
      }
      if (signInLink) {
        signInLink.classList.add('hidden');
      }
      if (accountText) {
        accountText.textContent = 'My account';
      }
    } else {
      // User is not logged in
      if (myAccountLink) {
        myAccountLink.classList.add('hidden');
      }
      if (signInLink) {
        signInLink.classList.remove('hidden');
      }
    }
  }
  
  // Update menu on load
  updateMenuForAuth();
  
  // Listen for storage changes (login/logout from other tabs)
  window.addEventListener('storage', updateMenuForAuth);
</script>
