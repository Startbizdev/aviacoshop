<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-3 sm:p-4 animate-pulse">
  <div class="flex flex-col h-full">
    <!-- Header: Name and Username -->
    <div class="mb-3 sm:mb-4">
      <div class="h-4 sm:h-5 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-2 skeleton-shimmer"></div>
      <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/2 skeleton-shimmer"></div>
    </div>

    <!-- Details Grid -->
    <div class="space-y-2.5 sm:space-y-3 flex-1 mb-3 sm:mb-4">
      <!-- Email -->
      <div class="flex items-start gap-2 sm:gap-2.5">
        <div class="w-4 h-4 bg-gray-200 dark:bg-gray-700 rounded-md flex-shrink-0 mt-0.5 skeleton-shimmer"></div>
        <div class="flex-1 min-w-0">
          <div class="h-2.5 sm:h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/4 mb-1.5 skeleton-shimmer"></div>
          <div class="h-3 sm:h-4 bg-gray-200 dark:bg-gray-700 rounded w-full skeleton-shimmer"></div>
        </div>
      </div>

      <!-- Registration Date -->
      <div class="flex items-start gap-2 sm:gap-2.5">
        <div class="w-4 h-4 bg-gray-200 dark:bg-gray-700 rounded-md flex-shrink-0 mt-0.5 skeleton-shimmer"></div>
        <div class="flex-1 min-w-0">
          <div class="h-2.5 sm:h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/3 mb-1.5 skeleton-shimmer"></div>
          <div class="h-3 sm:h-4 bg-gray-200 dark:bg-gray-700 rounded w-2/3 skeleton-shimmer"></div>
        </div>
      </div>
    </div>

    <!-- View Button -->
    <div class="mt-auto w-full h-8 sm:h-10 bg-gray-200 dark:bg-gray-700 rounded-lg skeleton-shimmer"></div>
  </div>
</div>

<style>
  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  
  .skeleton-shimmer {
    position: relative;
    overflow: hidden;
  }
  
  .skeleton-shimmer::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 1.5s infinite;
  }
  
  :global(.dark) .skeleton-shimmer::after {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
  }
</style>

