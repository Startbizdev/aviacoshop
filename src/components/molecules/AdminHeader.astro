---
import Icon from '../atoms/Icon.astro';
import Button from '../atoms/Button.astro';

interface Props {
  title: string;
  description?: string;
  actionLabel?: string;
  actionId?: string;
  actionIcon?: string;
  breadcrumbs?: Array<{ label: string; href?: string }>;
}

const {
  title,
  description,
  actionLabel,
  actionId,
  actionIcon = 'refresh-cw',
  breadcrumbs,
} = Astro.props;
---

<header class="sticky top-0 z-30 bg-white/95 dark:bg-gray-900/95 backdrop-blur-md border-b border-gray-200/80 dark:border-gray-800/80 h-16 lg:h-20 flex items-center relative">
  <div class="px-4 lg:px-6 w-full">
    <!-- Breadcrumbs (optional) - Only show if provided, positioned absolutely above header -->
    {breadcrumbs && breadcrumbs.length > 0 && (
      <div class="absolute top-0 left-0 right-0 pt-2 pb-1 px-4 lg:px-6 bg-white/95 dark:bg-gray-900/95 backdrop-blur-md border-b border-gray-200/80 dark:border-gray-800/80">
        <nav class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400">
          {breadcrumbs.map((crumb, index) => (
            <>
              {index > 0 && (
                <Icon name="chevron-right" size="sm" class="text-gray-400 dark:text-gray-500 w-3 h-3" />
              )}
              {crumb.href ? (
                <a href={crumb.href} class="hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
                  {crumb.label}
                </a>
              ) : (
                <span class={index === breadcrumbs.length - 1 ? 'text-gray-700 dark:text-gray-200 font-medium' : ''}>
                  {crumb.label}
                </span>
              )}
            </>
          ))}
        </nav>
      </div>
    )}
    
    <!-- Main Header Content -->
    <div class="flex items-center justify-between gap-4 w-full">
      <!-- Left: Menu button + Title -->
      <div class="flex items-center gap-3 min-w-0 flex-1">
        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 -ml-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-gray-100 transition-all flex-shrink-0"
          aria-label="Toggle sidebar"
          type="button"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
        
        <!-- Title Section -->
        <div class="min-w-0 flex-1">
          <h1 class="text-lg lg:text-xl font-bold text-gray-900 dark:text-white truncate leading-tight">
            {title}
          </h1>
          {description && (
            <p class="text-xs lg:text-sm text-gray-600 dark:text-gray-400 line-clamp-1 hidden sm:block mt-0.5">
              {description}
            </p>
          )}
        </div>
      </div>
      
      <!-- Right: Action Button -->
      {actionLabel && actionId && (
        <div class="flex-shrink-0">
          <Button
            id={actionId}
            variant="outlined"
            size="sm"
            class="text-xs lg:text-sm"
          >
            <span class="inline-flex items-center gap-1.5 lg:gap-2">
              <Icon name={actionIcon} size="sm" />
              <span class="whitespace-nowrap hidden sm:inline">{actionLabel}</span>
              <span class="whitespace-nowrap sm:hidden">Action</span>
            </span>
          </Button>
        </div>
      )}
    </div>
    
    <!-- Description on mobile - below header -->
    {description && (
      <div class="absolute top-full left-0 right-0 px-4 lg:px-6 py-2 bg-white/95 dark:bg-gray-900/95 backdrop-blur-md border-b border-gray-200/80 dark:border-gray-800/80 sm:hidden">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          {description}
        </p>
      </div>
    )}
  </div>
</header>
