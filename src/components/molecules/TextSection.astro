---
interface Props {
  title: string;
  content: string;
  class?: string;
}

const { title, content, class: className = '' } = Astro.props;
---

<section class={`py-12 md:py-16 lg:py-20 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="font-outfit font-bold text-3xl md:text-4xl lg:text-5xl mb-6 md:mb-8 text-gray-900 dark:text-white">
        {title}
      </h2>
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="font-outfit text-base md:text-lg text-gray-700 dark:text-gray-300 leading-relaxed whitespace-pre-line">
          {content}
        </p>
      </div>
    </div>
  </div>
</section>

