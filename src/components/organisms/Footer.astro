---
const currentYear = new Date().getFullYear();

// Description de l'entreprise depuis la page about
const companyDescription = `Aviaco is a PART 145 workshop specialised in dismantling and the distribution of Airbus helicopter spare parts. Once the aircraft has been dismantled in our workshop, the parts are recertified and sold throughout the world.`;

// Réseaux sociaux depuis le SheetMenu
const socialLinks = [
  {
    name: 'LinkedIn',
    url: 'https://fr.linkedin.com/company/aviacofrance',
    icon: 'linkedin',
    ariaLabel: 'LinkedIn'
  },
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/aviacofrance/',
    icon: 'instagram',
    ariaLabel: 'Instagram'
  },
  {
    name: 'Facebook',
    url: 'https://www.facebook.com/AviacoFr/?locale=fr_FR',
    icon: 'facebook',
    ariaLabel: 'Facebook'
  },
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/@aviacofrance5491',
    icon: 'youtube',
    ariaLabel: 'Youtube'
  }
];
---

<footer class="bg-gray-900 dark:bg-black text-white mt-auto border-t border-gray-800 dark:border-gray-900">
  <div class="container mx-auto px-4 py-12 lg:py-16">
    <!-- Main Footer Content - 5 columns aligned -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-6 lg:gap-8 mb-8">
      <!-- Column 1: Logo & Description (wider) -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block mb-4">
          <img 
            src="/aviacologo.png" 
            alt="Aviaco Shop" 
            class="h-10 w-auto brightness-0 invert filter transition-opacity hover:opacity-80"
          />
        </a>
        <p class="font-outfit text-gray-400 text-sm leading-relaxed mb-6">
          {companyDescription}
        </p>
        <!-- Réseaux sociaux -->
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a 
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="w-9 h-9 rounded-lg bg-gray-800 dark:bg-gray-950 border border-gray-700 dark:border-gray-800 hover:bg-primary hover:border-primary flex items-center justify-center transition-all duration-300 group"
              aria-label={social.ariaLabel}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-4.5 h-4.5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-4.5 h-4.5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'facebook' && (
                <svg class="w-4.5 h-4.5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg class="w-4.5 h-4.5 text-gray-400 group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Column 2: Shopping -->
      <div class="lg:col-span-2">
        <h4 class="font-outfit font-semibold text-base mb-4 text-white">Shopping</h4>
        <ul class="space-y-3">
          <li>
            <a href="/catalogue" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Shop online
            </a>
          </li>
          <li>
            <a href="/my-account" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              My account
            </a>
          </li>
          <li>
            <a href="/login" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Sign in / Log in
            </a>
          </li>
          <li>
            <a href="/panier" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              My cart
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 3: Services -->
      <div class="lg:col-span-2">
        <h4 class="font-outfit font-semibold text-base mb-4 text-white">Services</h4>
        <ul class="space-y-3">
          <li>
            <a href="/exchange" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Exchange
            </a>
          </li>
          <li>
            <a href="/sell-helicopter" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Sell your helicopter
            </a>
          </li>
          <li>
            <a href="/sell-spare-part" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Sell your spare part
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 4: Company -->
      <div class="lg:col-span-2">
        <h4 class="font-outfit font-semibold text-base mb-4 text-white">Company</h4>
        <ul class="space-y-3">
          <li>
            <a href="/about" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              About us
            </a>
          </li>
          <li>
            <a href="/contact" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Contact us
            </a>
          </li>
        </ul>
      </div>

      <!-- Column 5: Legal -->
      <div class="lg:col-span-2">
        <h4 class="font-outfit font-semibold text-base mb-4 text-white">Legal</h4>
        <ul class="space-y-3">
          <li>
            <a href="/legal-notice" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Legal Notice
            </a>
          </li>
          <li>
            <a href="/privacy-policy" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/terms-and-conditions" class="font-outfit text-sm text-gray-400 hover:text-white transition-colors duration-200 inline-block">
              Terms and Conditions
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar - Copyright only -->
    <div class="border-t border-gray-800 dark:border-gray-900 pt-8">
      <p class="font-outfit text-gray-400 text-sm text-center">
        © {currentYear} SAS AVIACO FRANCE. All rights reserved.
      </p>
    </div>
  </div>
</footer>
